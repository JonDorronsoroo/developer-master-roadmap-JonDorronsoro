---
import SimplePageHeader from "../../components/SimplePageHeader.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import ButtonDegradado from "../../components/Button/ButtonEleccion.astro";

const user = Astro.locals.user;
if(!user){
    return Astro.redirect("/auth/signin")
}

---

<BaseLayout title='Qué modificar' permalink={'/addBD/escogerObjeto'}>
    <SimplePageHeader
    title='Selecciona qué modificar'
    description='Escoge qué información deseas modificar de la base de datos.'
  />

  {user && user.admin==1 &&

  <ButtonDegradado titulo="Modifica o elimina el contenido de la base de datos"  path="/modificar/categoriaSelect" text="Modificar categoría"></ButtonDegradado>

  }

  <ButtonDegradado path="/modificar/escogerRecurso" text="Modificar recurso"></ButtonDegradado>

  <ButtonDegradado path="/modificar/escogerRoadmap" text="Modificar roadmap"></ButtonDegradado>

</BaseLayout>
